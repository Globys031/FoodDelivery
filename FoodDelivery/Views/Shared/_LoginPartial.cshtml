@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Meals" asp-action="Index">
            <button  type="submit" class="nav-link btn btn-link text-dark">Meals</button>
        </form>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Orders" asp-action="Index">
            <button  type="submit" class="nav-link btn btn-link text-dark">Orders</button>
        </form>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Restaurants" asp-action="Index">
            <button  type="submit" class="nav-link btn btn-link text-dark">Restaurants</button>
        </form>
    </li>
    @if (User.IsInRole("Administrator"))
    {
        <li class="nav-item">
            <form  class="form-inline" asp-area="" asp-controller="Roles" asp-action="Index">
                <button  type="submit" class="nav-link btn btn-link text-dark">Roles</button>
            </form>
        </li>
    }
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>