@model IEnumerable<FoodDelivery.Models.Meal>

@{
    ViewData["Title"] = "Index";
    IEnumerable<Restaurant> restaurants = ViewData["Restaurants"] as IEnumerable<Restaurant>;
    //IEnumerable<Meal> meals = ViewData["Meals"] as IEnumerable<Meal>;
}

<h1>List Of Meals</h1>
<br></br>

@if (User.IsInRole("RestaurantRepresentative"))
{
    <p><a asp-action="Create">Create New Meal</a></p>
}
<h2>Please choose the restaurant</h2>
@using(Html.BeginForm("getMeals","Meals", FormMethod.Post, new {id = "TheForm"}))
{
    @Html.DropDownList("RestaurantsData", 
    (IEnumerable<SelectListItem>) ViewData["RestaurantsData"],"--Select One--",
    new{onchange="document.getElementById('TheForm').submit();"})

    <input type='submit' value='Select'/>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Image_file_path)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant_ID)
            </td>
            <td>
                <a asp-action="MealView" asp-route-id="@item.ID">
                    @Html.DisplayFor(modelItem => item.Name)
                </a> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image_file_path)
            </td>
        </tr>
}
    </tbody>
</table>
