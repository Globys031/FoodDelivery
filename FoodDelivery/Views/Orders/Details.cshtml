@model FoodDelivery.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order_date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    @if (@Model?.State == Order.Order_State.not_paid)
    {
        <a asp-action="OrderPayment" asp-route-id="@Model?.ID">Pay</a>
     }
</div>
